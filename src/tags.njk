---
layout: default
title: Macro-Sea Tags
path: 'tags'
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: /tags/{{ helpers.slug(tag) }}/
tags:
  - tags
---
{%block tag%}{{ tag }}{%endblock%}
{# <h1>{{ tag }}</h1> #}


<div class="container mx-auto md:flex flex-row flex-wrap justify-between items-center content-start gap-2">
  {% for project in collections[ tag ] %}
    {%set index = loop.index %}
    {%for image in project.data.images %}
    <figure class="text-center mt-3" data-tags="{{project.data.tags}}">
          <a href="{{project.url}}"><div class="x bg-ms-yellow">{% image image.image, image.caption, "xborder object-fill md:max-h-40 w-auto hover:filter-xerox xhover:shadow-2xl", "(min-width: 768px) 20em, 100vw" %}</div></a>  
          <figcaption class="">{{index}}.{{loop.index}}</figcaption>  
    </figure>
    {%endfor%}
  {% endfor %}

  {%for i in range(1,4) %}
    <i aria-hidden class="x invisible border-red-200 border-2 w-1/5"> </i>
  {% endfor %}
</div>